<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_paddingBottomPercent="4.16%w"
        app:layout_paddingLeftPercent="3.33%w"
        app:layout_paddingRightPercent="3.33%w"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_label"
            android:layout_width="43dp"
            android:layout_height="18dp"
            android:background="@drawable/drawable_rectangle_hollow_438c44"
            android:gravity="center"
            android:text="不定式"
            android:textColor="@color/bg_green003"
            app:layout_heightPercent="5%w"
            app:layout_marginTopPercent="3.33%w"
            app:layout_textSizePercent="2.63%w"
            app:layout_widthPercent="11.94%w" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_label"
            android:lineSpacingExtra="3dp"
            android:text="按实际大家都发的看法及发动机"
            android:textColor="@color/shopingcart_textcolor"
            app:layout_marginLeftPercent="3.33%w"
            app:layout_marginTopPercent="3.33%w"
            app:layout_textSizePercent="3.88%w" />

        <TextView
            android:id="@+id/tv_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_content"
            android:lines="1"
            android:text="达达房贷房贷的撒旦个IE润给"
            android:textColor="@color/tv_ordercommit"
            app:layout_marginTopPercent="4.16%w"
            app:layout_textSizePercent="2.91%w" />
    </com.zhy.android.percent.support.PercentRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/width_1"
        android:layout_below="@id/rl_content"
        android:background="@color/bg_gray012"
        app:layout_marginLeftPercent="3.33%w" />
</com.zhy.android.percent.support.PercentRelativeLayout>