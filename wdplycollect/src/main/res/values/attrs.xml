<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="DrawCharLineView">
        <attr name="textSizeVertical" format="dimension"/>
        <attr name="spaceVertical" format="dimension"/>
        <attr name="textSizeHorizontal" format="dimension"/>
        <attr name="spaceHorizontal" format="dimension"/>
    </declare-styleable>

    <!--密码输入框-->
    <declare-styleable name="gridPasswordView">
        <attr name="textColor_gridPasswordView" format="color|reference" />
        <attr name="textSize_gridPasswordView" format="dimension" />

        <attr name="lineColor" format="color" />
        <attr name="gridColor" format="color" />
        <attr name="lineWidth_gridPasswordView" format="dimension" />

        <attr name="passwordLength" format="integer" />
        <attr name="passwordTransformation" format="string" />

        <attr name="passwordType" format="enum">
            <enum name="numberPassword" value="0" />
            <enum name="textPassword" value="1" />
            <enum name="textVisiblePassword" value="2" />
            <enum name="textWebPassword" value="3" />
        </attr>
    </declare-styleable>
</resources>